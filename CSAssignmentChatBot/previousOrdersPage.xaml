<Page x:Class="CSAssignmentChatBot.previousOrdersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CSAssignmentChatBot"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="previousOrdersPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="23*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="9*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                <GradientStop Color="#FFCB333B" Offset="1"/>
                <GradientStop Color="#FF007A33"/>
                <GradientStop Color="White" Offset="0.615"/>
                <GradientStop Color="White" Offset="0.448"/>
            </LinearGradientBrush>
        </Grid.Background>

        <TextBlock Text="Previous Orders" FontSize="40" Grid.ColumnSpan="2" TextAlignment="Center" Margin="0,0,0,55" FontWeight="Black"></TextBlock>
        

    </Grid>
</Page>
